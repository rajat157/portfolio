{
  "kind": "singleType",
  "collectionName": "site_settings",
  "info": {
    "singularName": "site-setting",
    "pluralName": "site-settings",
    "displayName": "Site Settings"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "site_title": {
      "type": "string",
      "required": true
    },
    "site_description": {
      "type": "text",
      "required": true
    },
    "logo": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images"
      ]
    },
    "favicon": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images"
      ]
    },
    "social_links": {
      "type": "json"
    },
    "newsletter_enabled": {
      "type": "boolean",
      "default": false
    },
    "contact_email": {
      "type": "email",
      "required": true
    }
  }
}
