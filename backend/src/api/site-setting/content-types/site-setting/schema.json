{
  "kind": "singleType",
  "collectionName": "site_settings",
  "info": {
    "singularName": "site-setting",
    "pluralName": "site-settings",
    "displayName": "Site Settings",
    "description": "Global site configuration"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "site_title": {
      "type": "string",
      "required": true,
      "default": "Portfolio"
    },
    "site_description": {
      "type": "text",
      "required": true
    },
    "site_url": {
      "type": "string"
    },
    "og_image": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["images"]
    },
    "social_links": {
      "type": "json"
    },
    "newsletter_enabled": {
      "type": "boolean",
      "default": true
    },
    "newsletter_title": {
      "type": "string",
      "default": "Subscribe to my newsletter"
    },
    "newsletter_description": {
      "type": "text"
    },
    "copyright_text": {
      "type": "string"
    }
  }
}
