{
  "kind": "singleType",
  "collectionName": "about",
  "info": {
    "singularName": "about",
    "pluralName": "abouts",
    "displayName": "About",
    "description": "Personal information and bio"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "headline": {
      "type": "string",
      "required": true,
      "maxLength": 100
    },
    "bio_short": {
      "type": "text",
      "required": true,
      "maxLength": 500
    },
    "bio_full": {
      "type": "richtext"
    },
    "avatar": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["images"]
    },
    "resume_url": {
      "type": "string"
    },
    "location": {
      "type": "string"
    },
    "available_for_work": {
      "type": "boolean",
      "default": true
    },
    "skills": {
      "type": "json"
    },
    "experience": {
      "type": "json"
    },
    "education": {
      "type": "json"
    }
  }
}
