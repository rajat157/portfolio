# ===========================================
# Portfolio Docker Environment Configuration
# ===========================================
# Copy this file to .env and fill in the values

# -------------------------------------------
# PostgreSQL Database
# -------------------------------------------
DATABASE_NAME=strapi
DATABASE_USERNAME=strapi
DATABASE_PASSWORD=change_this_secure_password

# -------------------------------------------
# Strapi Backend
# -------------------------------------------
APP_KEYS=key1,key2,key3,key4
API_TOKEN_SALT=change_this_random_string
ADMIN_JWT_SECRET=change_this_random_string
TRANSFER_TOKEN_SALT=change_this_random_string
JWT_SECRET=change_this_random_string

# -------------------------------------------
# Next.js Frontend
# -------------------------------------------
STRAPI_API_TOKEN=your_strapi_api_token_from_admin
NEXT_PUBLIC_SITE_URL=http://localhost:3000
REVALIDATION_SECRET=change_this_random_string

# -------------------------------------------
# Email (Resend) - Optional
# -------------------------------------------
RESEND_API_KEY=
CONTACT_EMAIL=
